pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                bat 'npm install'  // Use bat for Windows
            }
        }
        stage('Test') {
            steps {
                echo 'Running Unit Tests...'
                bat 'npm test'  // Use bat for Windows
            }
        }
        stage('Integration Test') {
            steps {
                echo 'Running Integration Tests...'
                bat 'npm run test:integration'  // Use bat for Windows
            }
        }
        stage('E2E Tests') {
            steps {
                echo 'Running End-to-End Tests...'
                bat 'npm run test:e2e'  // Use bat for Windows
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                bat 'npm run deploy'  // Use bat for Windows
            }
        }
    }
}
